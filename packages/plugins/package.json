{
  "name": "@verb/plugins",
  "version": "0.0.1",
  "description": "Official plugin registry for the Verb library",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && bun build src/index.ts --outdir dist --target bun --minify && bun run build:types",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist --skipLibCheck",
    "dev": "bun run --watch src/index.ts",
    "test": "bun test",
    "prepublishOnly": "bun run build"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "keywords": [
    "verb",
    "plugins",
    "library",
    "web",
    "server",
    "react",
    "ssr"
  ],
  "author": "Wess Cope",
  "license": "MIT",
  "dependencies": {
    "@verb/server": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^19.1.6",
    "@types/bun": "latest"
  }
}